@model IEnumerable<MVCApp.Models.Ksiazka>

@{
    ViewBag.Title = "Ksiazki";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ksiazki w kategorii ...</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tytuł)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tytuł)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena) PLN
        </td>
    </tr>
}

</table>
