@model IEnumerable<MVCApp.Models.Kategoria>

@{
    ViewBag.Title = "Kategorie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategorie książek</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Nazwa, "Ksiazki", "Injection", new { kategoriaid = item.Id }, null)
        </td>
    </tr>
}

</table>
