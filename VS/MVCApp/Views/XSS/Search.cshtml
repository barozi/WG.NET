@model IEnumerable<MVCApp.Models.Ksiazka>

@{
    ViewBag.Title = "Wyniki wyszukiwania";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var searchText = ViewData["SearchText"];
}

<h2>Wyszukane książki dla hasła: @Html.Raw(searchText)</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tytuł)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tytuł)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena) PLN
            </td>
        </tr>
    }

</table>
